<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.florent37.materialviewpager.sample.fragment.TrialFragment"
    android:id="@+id/testfragment"
    android:textAlignment="center">

    <!-- TODO: Update blank fragment layout -->



        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bfc2a5"
            android:text="Proceed to Payment"
            android:textSize="26dp"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount:"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_above="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:layout_marginBottom="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView"
        android:textColor="#bfc2a5"
        android:textSize="26dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You Have A Balance Of"
        android:id="@+id/textView2"
        android:layout_marginBottom="95dp"
        android:editable="false"
        android:textSize="16dp"
        android:layout_above="@+id/ll1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs. 200 "
        android:id="@+id/textView3"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#1E88E5"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <View
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="@android:color/black"
        android:id="@+id/line1"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conversion Rate"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/line1"
        android:layout_toRightOf="@+id/line1"
        android:layout_toEndOf="@+id/line1"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1 Rs. = 2 E.Coins"
        android:id="@+id/textView5"
        android:textColor="#1E88E5"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:id="@+id/ll1"
        android:background="#d3d3d3"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Totat Collected Coins Are:"
            android:id="@+id/textView16"
            android:layout_gravity="center_horizontal"
            android:paddingTop="7dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="50"
            android:id="@+id/textView17"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Would You Like To Redeem Your Coins?"
            android:id="@+id/textView18"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
