<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.florent37.materialviewpager.sample.fragment.MypointsFragment">

    <!-- TODO: Update blank fragment layout -->


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:progress="60"
        android:indeterminate="false"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Monthly Challenge"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="60%"
        android:id="@+id/textView20"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#1E88E5"
        android:layout_above="@+id/line1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your target Usage"
        android:id="@+id/textView2"
        android:editable="false"
        android:textSize="16dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView19"
        android:layout_toLeftOf="@+id/textView20"
        android:layout_toStartOf="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="70kW"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#1E88E5"
        android:layout_alignBottom="@+id/line1"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:id="@+id/line1"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usage this month"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/line1"
        android:layout_toRightOf="@+id/line1"
        android:layout_toEndOf="@+id/line1"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="58.3kW"
        android:id="@+id/textView5"
        android:textColor="#1E88E5"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/line1"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/ll1"
        android:background="#d3d3d3"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Next Month&apos;s Challenge?"
            android:id="@+id/textViewa16"
            android:layout_gravity="center_horizontal"
            android:paddingTop="7dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <com.gc.materialdesign.views.Slider
            android:id="@+id/sliderNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#1E88E5"
            materialdesign:max="50"
            materialdesign:min="0"
            materialdesign:showNumberIndicator="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0                                            50                                         100"
            android:id="@+id/textView21"
            android:layout_below="@+id/ll1"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:gravity="bottom|center_vertical|center|center_horizontal" />



    </LinearLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:text="View Detailed Stats"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
